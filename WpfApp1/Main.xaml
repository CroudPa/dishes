<Window x:Class="WpfApp1.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Посуда: Главная" Height="450" Width="800" Icon="Resources/logos/icon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <DockPanel HorizontalAlignment="Left" Height="52" LastChildFill="False" VerticalAlignment="Top" Width="792" Grid.ColumnSpan="3" Background="#FF76E383">
            <Image HorizontalAlignment="Left" Height="51" VerticalAlignment="Top" Width="51" DockPanel.Dock="Left" Source="Resources/logos/logo.png"/>
            <Label Content="ООО Посуда" Height="42" VerticalAlignment="Center" HorizontalAlignment="Center" Width="233" FontFamily="Comic Sans MS" FontSize="20" Margin="0,10,0,0"/>
            <Button Content="Выйти" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" DockPanel.Dock="Right" FontFamily="Comic Sans MS" Click="Button_Click" Margin="0 0 5 0"/>
        </DockPanel>

    </Grid>
</Window>
